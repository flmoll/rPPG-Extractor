// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Python 3",
	"dockerFile": "Dockerfile",  // Reference the Dockerfile
	"context": ".",  // Define the build context (typically the root folder)

	// Mount an external drive to /mnt/data
	"mounts": [
		{
			"source": "/home/flmoll/data/data",
			"target": "/mnt/data",
			"type": "bind",
			"consistency": "delegated"
		},
		{
			"source": "/home/flmoll/usb",
			"target": "/mnt/usb",
			"type": "bind",
			"consistency": "delegated"
		},
		{
			"source": "/home/flmoll/data/results",
			"target": "/mnt/results",
			"type": "bind",
			"consistency": "delegated"
		}
	],

	// Add labels to the container
	"labels": {
		"user": "flmoll"
	},
	"runArgs": [
        "--gpus=all"
    ],
    "containerEnv": {
        "NVIDIA_VISIBLE_DEVICES": "all",
        "NVIDIA_DRIVER_CAPABILITIES": "compute,utility,video"
    }
	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	//"postCreateCommand": "sudo apt-get update && sudo apt-get install -y ffmpeg v4l-utils git-lfs && pip3 install --no-cache-dir --user -r requirements.txt",
	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
